" https://github.com/vim/vim/issues/453
let s:oldval = ""

function! SearchCount()
  let pos=getpos('.')
  try
    let keyString=@/
    if strlen(keyString) == 0
      return ""
    endif

    if getfsize(expand(@%)) > 100000
      return "Too Large"
    endif

    let cnt = ''
    redir => cnt
    silent exe '%s/' . keyString . '//nge'
    redir END
    let cnt = matchstr(cnt, '\d\+')
    if cnt == "0" || cnt == ""
      return " 0/0"
    endif

    let nth = ''
    let rest = ''
    call setpos('.', pos)
    redir => rest
    silent exe 's/' . keyString . '\(.\{-}\%#\)\@=//nge'
    call setpos('.', pos)
    redir => nth
    silent exe '0,.-1s/' . keyString . '//nge'
    redir END
    let s:oldval = ' ' . (matchstr( nth, '\d\+' ) + matchstr(rest,'\d\+')) . '/' . cnt. ''
    return s:oldval
  catch
    return "ERR".v:exception
  finally
    call setpos('.', pos)
    let s:oldval = "NONE"
  endtry
endfunction

