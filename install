# Use GNU Stow to install the included dotfiles
stow -R --target=$HOME tmux
stow -R --target=$HOME vim
stow -R --target=$HOME zsh
stow -R --target=$HOME git
stow -R --target=$HOME x11
stow --no-folding -R --target=$HOME/.config xdg-config

ln -sf $(readlink -f ~/.config/alacritty/*) ~/.config/alacritty/*

ln -s $PWD/sublime ~/.config/sublime-text-3/Packages/User
