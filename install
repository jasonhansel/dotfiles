# Use GNU Stow to install the included dotfiles

stow --no-folding -R --target=$HOME global


cd users

if [ -d "$(hostname)-$(whoami)" ] ; then stow --no-folding -R --target=$HOME "$(hostname)-$(whoami)"; fi
if [ -d "$(hostname)" ] ; then stow --no-folding -R --target=$HOME "$(hostname)"; fi
if [ -d "$(whoami)" ] ; then stow --no-folding -R --target=$HOME "$(whoami)"; fi

# NB: may also need pacman -S python-neovim
pip3 install --user neovim
vim +PlugInstall +qa

cd ..
