#!/bin/sh
# Use GNU Stow to install the included dotfiles

set -euo pipefail

# NB: may also need pacman -S python-neovim
pip3 install --user neovim
vim +PlugInstall +qa

if which code
then
	cat ~/.vscode-extension-list | while read -r EXTENSION
	do
		yes 1 | code --install-extension $EXTENSION || true
	done
fi
cd ..
