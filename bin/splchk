#!/bin/sh
sed -Ee 's/[*.0-9]/ /g' | \
    { echo '!' ; sed -Ene 's/^%ignore: /  \n@/gp;t;s/^/  /gp' ; } | \
	aspell pipe --dont-suggest --mode=tex \
    --add-tex-command="ci op" \
	--add-tex-command="ct op" \
    --add-tex-command="cnp op" \
    --add-tex-command="cna op" \
    --add-tex-command="cnap op" \
    --add-tex-command="shortcite p" \
    --add-tex-command="addbibresource p" \
    --ignore=0 \
    --add-tex-command="begin pop" \
    --add-tex-command="cis opopop" \
    --add-tex-command="autocites opopop" \
	--add-tex-command="lat p" \
	--add-tex-command="setlist op" | \
	awk '/^@/{N=1;B=0;}/^\s*$/{B=0;N=N+1;}/^#/{ print N " " ($3-1) " " $2 ; B = 1; }'
#	awk '/^@/{N=1;B=0;}/^$/{}/*/{N=N+1;B=0;}/^[^@*]/{ print N " " $3 " " $2 ; if(B == 0) { N = N + 1; B = 1; } }'

