#!/bin/sh
sed -Ee 's/[*.0-9]/ /g' | \
    { echo '!' ; sed -Ene 's/^%ignore: /  \n@/gp;t;s/^/  /gp' ; } | \
	aspell pipe --dont-suggest --mode=tex \
	--add-tex-command="ci op" --add-tex-command="cnp op" --add-tex-command="cna op" --add-tex-command="setlist op" 2>/dev/null | \
	awk '/^@/{N=1;B=0;}/^\s*$/{B=0;N=N+1;}/^#/{ print N " " ($3-1) " " $2 ; B = 1; }'
#	awk '/^@/{N=1;B=0;}/^$/{}/*/{N=N+1;B=0;}/^[^@*]/{ print N " " $3 " " $2 ; if(B == 0) { N = N + 1; B = 1; } }'

